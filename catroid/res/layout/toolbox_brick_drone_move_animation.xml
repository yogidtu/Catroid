<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="wrap_content"
  android:layout_width="match_parent"
  android:orientation="vertical"
  android:background="@drawable/brick_drone"
>
  <RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:layout_centerVertical="true"
  >
    <TextView
      android:text="@string/drone_brick_move_animation"
      android:layout_centerVertical="true"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:paddingRight="10dip"
      android:textColor="@color/white"
      android:textSize="18dip"
      android:textStyle="bold"
    >
    </TextView>
  </RelativeLayout>
  
  <RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:layout_centerVertical="true"
  >
    <Button
      android:id="@+id/btMoveAnimationChoose"
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_alignParentRight="true"
      android:layout_centerVertical="true"
      android:maxWidth="150dip"
      android:layout_alignParentLeft="true"
      android:clickable="false"
      android:focusable="false"
      android:focusableInTouchMode="false">
    </Button>     
  </RelativeLayout>
  
  <RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:layout_centerVertical="true"
  >
    <LinearLayout
      android:layout_height="wrap_content"
      android:layout_width="wrap_content"
      android:layout_alignParentRight="false"
      android:layout_centerVertical="true"
    >
      <TextView
        android:text="@string/drone_for"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingRight="10dip"
        android:textColor="@color/white"
        android:textSize="18dip"
        android:textStyle="bold"
      >
      </TextView>
      <EditText
        android:id="@+id/drone_edit_move_aniamtion_duration"
        android:text="0"
        android:layout_height="wrap_content"
        android:layout_width="45dp"
        android:gravity="center"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="number"
        android:maxLength="5"
        android:maxLines="1">
      </EditText>
      <TextView
        android:text="@string/drone_seconds"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:paddingLeft="10dip"
        android:paddingRight="10dip"
        android:textColor="@color/white"
        android:textSize="18dip"
        android:textStyle="bold"
      >
      </TextView>
    </LinearLayout>
  </RelativeLayout>  
</LinearLayout>